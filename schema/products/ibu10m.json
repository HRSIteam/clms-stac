{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/ibu10m.json",
  "title": "Imperviousness Built Up 10m STAC Schema",
  "description": "This schema only checks the validity of Imperviousness Built Up 10m STAC items and collections",
  "oneOf": [
    {
      "$comment": "This is the schema for Imperviousness Built-Up 10m Items",
      "type": "object",
      "required": [
        "stac_version",
        "stac_extensions",
        "type",
        "id",
        "bbox",
        "properties",
        "collection",
        "links",
        "assets"
      ],
      "properties": {
        "stac_version": {
          "const": "1.0.0"
        },
        "stac_extensions": {
          "const": [
            "https://stac-extensions.github.io/projection/v1.1.0/schema.json"
          ]
        },
        "type": {
          "const": "Feature"
        },
        "id": {
          "type": "string"
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "oneOf": [
            {
              "items": [
                { "type": "number", "minimum": 18.140136, "maximum": 19.329582 },
                { "type": "number", "minimum": 41.672629, "maximum": 42.463926 },
                { "type": "number", "minimum": 18.140136, "maximum": 19.329582 },
                { "type": "number", "minimum": 41.672629, "maximum": 42.463926 }
              ]
            }
          ]
        },
        "properties": {
          "type": "object",
          "required": [
            "description",
            "datetime",
            "start_datetime",
            "end_datetime",
            "created",
            "providers",
            "proj:epsg",
            "proj:bbox",
            "proj:shape"
          ],
          "properties": {
            "providers": {
              "const": [
                {
                  "name": "Copernicus Land Monitoring Service",
                  "description": "The Copernicus Land Monitoring Service provides geographical information on land cover and its changes, land use, ground motions, vegetation state, water cycle and Earth's surface energy variables to a broad range of users in Europe and across the World in the field of environmental terrestrial applications.",
                  "roles": ["licensor", "host"],
                  "url": "https://land.copernicus.eu"
                }
              ]
            }
          }
        },
        "collection": {
          "const": "imperviousness-built-up-10m"
        },
        "links": {
          "type": "array",
          "allOf": [
            {
              "contains": {
                "const": {
                  "rel": "license",
                  "href": "https://land.copernicus.eu/en/data-policy"
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "self"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "root"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "parent"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "collection"
                  }
                }
              }
            }
          ]
        },
        "assets": {
          "type": "object",
          "minProperties": 3,
          "maxProperties": 3,
          "propertyNames": {
            "pattern": "^builtup_map"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "pattern": ".tif$|.dbf$|.tfw$"
              }
            }
          },
          "required": [
            "builtup_map",
            "builtup_map_database",
            "builtup_map_worldfile"
          ]
        }
      }
    },
    {
      "$comment": "This is the schema for Imperviousness Built-Up 10m Collection",
      "type": "object",
      "required": [
        "stac_version",
        "stac_extensions",
        "type",
        "id",
        "title",
        "description",
        "keywords",
        "license",
        "providers",
        "extent",
        "summaries",
        "links",
        "assets",
        "item_assets"
      ],
      "properties": {
        "stac_version": {
          "const": "1.0.0"
        },
        "stac_extensions": {
          "const": [
            "https://stac-extensions.github.io/item-assets/v1.0.0/schema.json",
            "https://stac-extensions.github.io/projection/v1.1.0/schema.json"
          ]
        },
        "type": {
          "const": "Collection"
        },
        "id": {
          "const": "imperviousness-built-up-10m"
        },
        "title": {
          "const": "High Resolution Layer Imperviousness Built-up 10m"
        },
        "description": {
          "const": "The Impervious Built-up layer is a thematic product showing the binary information of building (class 1) and no building (class 0) within the sealing outline derived from the IMD 2018 for the period 2018 for the EEA-39 area."
        },
        "keywords": {
          "const": [
            "Copernicus",
            "Imperviousness",
            "Built-up",
            "IBU",
            "High Resolution Layer",
            "Land cover",
            "Buildings"
          ]
        },
        "license": {
          "const": "proprietary"
        },
        "providers": {
          "const": [
            {
              "name": "Copernicus Land Monitoring Service",
              "description": "The Copernicus Land Monitoring Service provides geographical information on land cover and its changes, land use, ground motions, vegetation state, water cycle and Earth's surface energy variables to a broad range of users in Europe and across the World in the field of environmental terrestrial applications.",
              "roles": ["licensor", "host"],
              "url": "https://land.copernicus.eu/en"
            }
          ]
        },
        "extent": {
          "const": {
            "spatial": {
              "bbox": [[-31.285, 27.642, 44.807, 71.165]]
            },
            "temporal": {
              "interval": [["2018-01-01T00:00:00.000Z", null]]
            }
          }
        },
        "assets": {
          "type": "object",
          "minProperties": 2,
          "maxProperties": 2,
          "required": [
            "imperviousness_builtup_metadata",
            "imperviousness_builtup_color_palette"
          ]
        },
        "item_assets": {
          "type": "object",
          "required": [
            "builtup_map",
            "builtup_map_database",
            "builtup_map_worldfile"
          ]
        },
        "summaries": {
          "type": "object",
          "required": ["proj:epsg"],
          "minProperties": 1,
          "maxProperties": 1
        },
        "links": {
          "type": "array",
          "allOf": [
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "license"
                  },
                  "href": {
                    "const": "https://land.copernicus.eu/en/data-policy"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "self"
                  },
                  "href": {
                    "type": "string",
                    "const": ".json$"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "root"
                  },
                  "href": {
                    "type": "string",
                    "const": ".json$"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "parent"
                  },
                  "href": {
                    "type": "string",
                    "const": ".json$"
                  }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": {
                    "const": "item"
                  },
                  "href": {
                    "type": "string",
                    "const": ".json$"
                  }
                }
              }
            }
          ]
        }
      }
    }
  ]
}
