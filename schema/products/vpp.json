{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/vpp.json",
  "title": "Vegetation Phenology and Productivity STAC Items",
  "description": "This schema only checks the existence but the schema of the properties",
  "oneOf": [
    {
      "$comment": "This is the schema for Vegetation Phenology and Productivity Items",
      "type": "object",
      "required": [
        "stac_version",
        "stac_extensions",
        "type",
        "id",
        "bbox",
        "properties",
        "collection",
        "links",
        "assets"
      ],
      "properties": {
        "stac_version": { "const": "1.0.0" },
        "stac_extensions": {
          "const": [
            "https://stac-extensions.github.io/projection/v1.1.0/schema.json"
          ]
        },
        "type": { "const": "Feature" },
        "id": {
          "type": "string",
          "pattern": "^VPP"
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "oneOf": [
            {
              "items": [
                { "type": "number", "minimum": -25, "maximum": 45 },
                { "type": "number", "minimum": 26, "maximum": 72 },
                { "type": "number", "minimum": -25, "maximum": 45 },
                { "type": "number", "minimum": 26, "maximum": 72 }
              ]
            },
            {
              "items": [
                { "type": "number", "minimum": -55.23, "maximum": -50.89 },
                { "type": "number", "minimum": 1.69, "maximum": 6.34 },
                { "type": "number", "minimum": -55.23, "maximum": -50.89 },
                { "type": "number", "minimum": 1.69, "maximum": 6.34 }
              ]
            },
            {
              "items": [
                { "type": "number", "minimum": -62.09, "maximum": -60.08 },
                { "type": "number", "minimum": 15.26, "maximum": 17.19 },
                { "type": "number", "minimum": -62.09, "maximum": -60.08 },
                { "type": "number", "minimum": 15.26, "maximum": 17.19 }
              ]
            },
            {
              "items": [
                { "type": "number", "minimum": -62.1, "maximum": -60.1 },
                { "type": "number", "minimum": 13.45, "maximum": 15.38 },
                { "type": "number", "minimum": -62.1, "maximum": -60.1 },
                { "type": "number", "minimum": 13.45, "maximum": 15.38 }
              ]
            },
            {
              "items": [
                { "type": "number", "minimum": 44.05, "maximum": 46.04 },
                { "type": "number", "minimum": -13.68, "maximum": -11.73 },
                { "type": "number", "minimum": 44.05, "maximum": 46.04 },
                { "type": "number", "minimum": -13.68, "maximum": -11.73 }
              ]
            },
            {
              "items": [
                { "type": "number", "minimum": 55.04, "maximum": 56.16 },
                { "type": "number", "minimum": -21.81, "maximum": -19.87 },
                { "type": "number", "minimum": 55.04, "maximum": 56.16 },
                { "type": "number", "minimum": -21.81, "maximum": -19.87 }
              ]
            }
          ]
        },
        "properties": {
          "type": "object",
          "required": [
            "description",
            "datetime",
            "start_datetime",
            "end_datetime",
            "created",
            "providers",
            "proj:epsg",
            "proj:bbox",
            "proj:shape"
          ],
          "properties": {
            "description": { "type": "string" },
            "datetime": { "const": null },
            "start_datetime": {
              "type": "string",
              "pattern": "20(1[7-9]|[2-9][0-9])-01-01T00:00:00.000Z"
            },
            "end_datetime": {
              "type": "string",
              "pattern": "20(1[7-9]|[2-9][0-9])-12-31T00:00:00.000Z"
            },
            "created": {
              "type": "string",
              "pattern": "20(1[7-9]|[2-9][0-9])-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])T(0[0-9]|1[0-9]|2[0-3]):([0-5][0-9]):([0-5][0-9])\\.([0-9]{3})Z"
            },
            "providers": {
              "const": [
                {
                  "name": "Copernicus Land Monitoring Service",
                  "description": "The Copernicus Land Monitoring Service provides geographical information on land cover and its changes, land use, ground motions, vegetation state, water cycle and Earth's surface energy variables to a broad range of users in Europe and across the World in the field of environmental terrestrial applications.",
                  "roles": ["licensor", "host"],
                  "url": "https://land.copernicus.eu"
                }
              ]
            },
            "proj:epsg": {
              "type": "integer",
              "oneOf": [
                { "minimum": 32620, "maximum": 32622 },
                { "minimum": 32625, "maximum": 32638 },
                { "minimum": 32738, "maximum": 32738 },
                { "minimum": 32740, "maximum": 32740 }
              ]
            },
            "proj:bbox": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "proj:shape": {
              "const": [10980, 10980]
            }
          }
        },
        "collection": { "const": "vegetation-phenology-and-productivity" },
        "links": {
          "type": "array",
          "allOf": [
            {
              "contains": {
                "const": {
                  "rel": "license",
                  "href": "https://land.copernicus.eu/en/data-policy"
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": { "const": "self" }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": { "const": "root" }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": { "const": "parent" }
                }
              }
            },
            {
              "contains": {
                "type": "object",
                "properties": {
                  "rel": { "const": "collection" }
                }
              }
            }
          ]
        },
        "assets": {
          "type": "object",
          "minProperties": 14,
          "maxProperties": 14,
          "propertyNames": {
            "pattern": "ampl$|eosd$|eosv$|length$|lslope$|maxd$|maxv$|minv$|qflag$|rslope$|sosd$|sosv$|sprod$|tprod$"
          }
        }
      }
    },
    {
      "$comment": "This is the schema for Vegetation Phenology and Productivity Collection",
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "const": "Collection" }
      }
    }
  ]
}
